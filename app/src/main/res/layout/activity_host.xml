<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_Primary_Color"
    android:padding="4dp"
    tools:context=".HostActivity">

    <FrameLayout
        android:id="@+id/host_fragment_navigation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/host_btn_NewRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent out a car"
        app:layout_constraintBottom_toTopOf="@+id/host_btn_TotalStats"
        app:layout_constraintEnd_toStartOf="@+id/host_btn_NewSale"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/host_btn_NewSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put a car for sale"
        app:layout_constraintBottom_toTopOf="@+id/host_btn_TotalStats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/host_btn_NewRent" />

    <Button
        android:id="@+id/host_btn_TotalStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Statistics"
        app:layout_constraintBottom_toTopOf="@+id/host_fragment_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/host_switch_ViewRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/App_Secondary_Color"
        android:checked="true"
        android:text="For Rent"
        app:layout_constraintEnd_toStartOf="@+id/host_switch_ViewSell"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_lbl_yourcar" />

    <Switch
        android:id="@+id/host_switch_ViewSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/App_Secondary_Color"
        android:checked="true"
        android:padding="2dp"
        android:text="For Sale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/host_switch_ViewRent"
        app:layout_constraintTop_toBottomOf="@+id/host_lbl_yourcar" />

    <TextView
        android:id="@+id/host_lbl_yourcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Vehicles"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/host_rcycl_CarList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/App_Secondary_Color"
        app:layout_constraintBottom_toTopOf="@+id/host_btn_NewRent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_switch_ViewRent" />
</androidx.constraintlayout.widget.ConstraintLayout>